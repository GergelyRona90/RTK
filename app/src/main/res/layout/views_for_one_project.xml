<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:background="@color/img_backgoround"
    android:id="@+id/recycler_view_for_images_in_a_project"
    >


    <ImageView
        android:id="@+id/imageOfImageOfRTK"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textOfImageOfRTK"
        android:layout_width="156dp"
        android:layout_height="71dp"
        android:gravity="center"
        android:text="Sema"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageOfImageOfRTK"
        app:layout_constraintTop_toTopOf="@+id/imageOfImageOfRTK"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

